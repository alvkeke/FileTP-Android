<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/file_view_icon"
        android:layout_marginStart="@dimen/distance_margin_file_icon"
        android:layout_marginBottom="@dimen/distance_margin_file_icon"
        android:layout_marginTop="@dimen/distance_margin_file_icon"
        android:layout_marginEnd="@dimen/distance_margin_file_icon"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/file_view_name"
        android:layout_toEndOf="@id/file_view_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/distance_margin_file_icon"
        android:textColor="@color/color_black"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/file_view_divider"
        android:layout_below="@id/file_view_icon"
        android:background="@color/color_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>